{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "*.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "mock"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "ignoreDeprecations": "5.0",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "unplugin-icons/types/vue"
    ]
  }
}